body {
    font-family: 'Times New Roman', Times, serif;
    text-align: center;
    background-color: teal;

}

button {
    background-color: #4CAF50;
    border-radius: 25px;
    width: 80px;
    height: 60px;
    color: white;
    cursor: pointer;
}

textarea {
    outline: none;
    resize: none;
    border-radius: 25px;
    padding: 20px;
    width: 400px;
    height: 400px;
}